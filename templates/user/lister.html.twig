{% extends 'accueil/accueil_admin.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block body %}
    <div>
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
    
        <br>
    
        <h2>LISTE DES UTILISATEURS</h2>
        <table>
            {% for u in pUsers %}
                <tr>
                    <td><a href="{{ path('app_user_consulter', { 'id': u.id }) }}" class="instrument-link">{{ u.email }}</a></td>
                    <td>
                        <div class="table-data-feature">
                            <div class="item">
                                <a href="{{ path('app_user_modifier', { 'id': u.id }) }}" class="zmdi zmdi-edit">Modifier</a>
                            </div>
                            <div class="item">
                                <a href="{{ path('app_user_supprimer', { 'id': u.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" class="zmdi zmdi-delete">Supprimer</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>Aucun utilisateur n'a été trouvé.</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {# Ajoutez ici vos scripts JavaScript, si nécessaire #}
{% endblock %}
