<!DOCTYPE html>
<html>
    <head>
        <style>
            /* Styles de base pour l'alignement */
            body {
                font-family: Arial, sans-serif;
                margin: 20px;
            }

            h4 {
                text-align: center;
                margin-bottom: 20px;
            }

            /* Cadre principal pour contenir tout */
            .container {
                display: flex;
                justify-content: space-between;
                border: 2px solid #ccc;
                padding: 20px;
                border-radius: 10px;
                margin-bottom: 20px;
            }

            /* Détails et image à droite */
            .details {
                width: 65%;
                padding-right: 20px;
            }

            /* Image à droite */
            .image-container {
                width: 30%;
                text-align: center;
                padding: 10px;
            }

            .image-container img {
                width: 100%;
                height: auto;
                max-width: 200px;
                border-radius: 5px;
            }

            /* Table des informations de l'instrument */
            table {
                width: 100%;
                border-collapse: collapse;
            }

            table, th, td {
                border: 1px solid #ddd;
            }

            th, td {
                padding: 8px;
                text-align: left;
            }

            th {
                background-color: #f2f2f2;
            }

            /* Table des interventions */
            .interventions {
                width: 100%;
                margin-top: 20px;
            }

            .interventions th, .interventions td {
                padding: 8px;
                text-align: left;
            }

            .interventions th {
                background-color: #f9f9f9;
            }
        </style>
    </head>
    <body>
        <h4>PAGE DE CONSULTATION D'UN INSTRUMENT</h4>

        <!-- Conteneur principal -->
        <div class="container">
            <!-- Détails de l'instrument et interventions -->
            <div class="details">
                <table>
                    <tr>
                        <td><strong>Date d'achat :</strong></td>
                        <td>{{ formattedDateAchat }}</td>
                    </tr>
                    <tr>
                        <td><strong>Prix Achat :</strong></td>
                        <td>{{ instrument.prixAchat }}€</td>
                    </tr>
                    <tr>
                        <td><strong>Marque :</strong></td>
                        <td>
                            {% if instrument.marque is not null %}
                                {{ instrument.marque.libelle }}
                            {% else %}
                                /
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Modèle :</strong></td>
                        <td>
                            {% if instrument.modele is not null %}
                                {{ instrument.modele.nom }}
                            {% else %}
                                /
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Numéro de Série :</strong></td>
                        <td>{{ instrument.numSerie }}</td>
                    </tr>
                    <tr>
                        <td><strong>Couleur :</strong></td>
                        <td>
                            {% if instrument.couleur is not null %}
                                {{ instrument.couleur.libelle }}
                            {% else %}
                                /
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Utilisé ? :</strong></td>
                        <td>{{ instrument.utilisation == 1 ? 'Oui' : 'Non' }}</td>
                    </tr>
                </table>

                <br>

                <table>
                    <tr>
                        <td><strong>Type d'instrument :</strong></td>
                        <td>
                            {% if instrument.TypeInstrument is not null %}
                                {{ instrument.TypeInstrument.libelle }}
                            {% else %}
                                /
                            {% endif %}
                        </td>
                    </tr>
                </table>

                <!-- Section des interventions -->
                <div class="interventions">
                    <h4>Interventions</h4>
                    <table>
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Date Début</th>
                                <th>Date Fin</th>
                                <th>Professionnel</th>
                                <th>Descriptif</th>
                                <th>Prix</th>
                                <th>Interaction</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for intervention in instrument.getIntervention() %}
                                <tr>
                                    <td>{{ intervention.id }}</td>
                                    <td>{{ intervention.dateDebut|date('d/m/Y') }}</td>
                                    <td>{{ intervention.dateFin|date('d/m/Y') }}</td>
                                    <td>Information Indisponible</td>
                                    <td>{{ intervention.descriptif }}</td>
                                    <td>{{ intervention.prix }}€</td>
                                    
			                        <td>
			                        	<a href="{{ path('app_intervention_instrument_modifier', { 'id': instrument.id }) }}">
			                        		<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="black" viewBox="0 0 24 24" stroke-width="2" class="icon icon-tabler icon-tabler-pencil">
			                        			<path stroke-linecap="round" stroke-linejoin="round" d="M13 3l8 8-10 10H3v-8L13 3z"></path>
			                        		</svg>
			                        	</a>
		                        	</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Image de l'instrument -->
            <div class="image-container">
                {% if instrument.cheminImage %}
                    <img src="{{ asset('images/' ~ instrument.cheminImage) }}" alt="Image de l'instrument">
                {% else %}
                    <p>Aucune image disponible</p>
                {% endif %}
            </div>
        </div>
        <div class="bouton">
            <a href="{{ path('app_intervention_instrument_ajouter', { 'id': instrument.id }) }}" style="
                display: inline-block;
                background-color: black;
                color: white;
                padding: 10px 10px;
                text-decoration: none;
                border-radius: 5px;
                font-size: 16px;
                text-align: center;
                cursor: pointer;" >
                Ajouter une intervention
            </a>
        </div>
    </body>
</html>
